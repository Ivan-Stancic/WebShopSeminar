@model WebShopSeminar.Models.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Proizvod";
}

<h1>Proizvod</h1>

<div>
    <h4>Detalji</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
         <dt class = "col-sm-2">
            Kategorija
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Title)
        <dt class = "col-sm-2">
            Dodaj količinu
        </dt>
        <dd class = "col-sm-10">
            <select name="ProductCategoryId" class="form-select" aria-label="Default select example">
                @for(int i = 1; i <= Model.Quantity; i++)
                {
                    <option value="@i">@i</option>
                }
        </select>
        </dd>
    </dl>
</div>

